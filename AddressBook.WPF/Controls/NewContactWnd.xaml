<Window x:Class="AddressBook.WPF.Controls.NewContactWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBook.WPF.Controls"
        xmlns:ctrl="clr-namespace:AddressBook.WPF.Controls"
        xmlns:vm="clr-namespace:AddressBook.WPF.ViewModels"
        mc:Ignorable="d"
        Background="{StaticResource gradientBlack}"
        Title="Ny kontakt" Height="450" Width="800">

    <!--<Window.DataContext>
        <vm:NewContactViewModel />
    </Window.DataContext>-->
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Detaljvy -->
        <ctrl:ContactDetailsCtrl Grid.Row="0" DataContext="{Binding NewContact}" />

        <!-- Knapppanel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,20,20">
            <Button Style="{StaticResource DarkGreenButton}" Content="Spara kontakt"
                Command="{Binding SaveCommand}"
                Width="120" Height="30"/>
            <Button Style="{StaticResource RedButton}" Content="Avbryt"
                Command="{Binding CancelCommand}"
                Width="120" Height="30" Margin="30 0 0 0"/>
        </StackPanel>

    </Grid>
    
</Window>
