<UserControl x:Class="AddressBook.WPF.Controls.ContactDetailsCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddressBook.WPF.Controls"
             mc:Ignorable="d" FontSize="22"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Style som gäller för alla TextBlock inom denna UserControl -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Namn:" Grid.Row="0"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="150 0 0 15"/>


        <TextBlock Text="Gatuadress:" Grid.Row="1"/>
        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="150 0 0 15"/>

        <TextBlock Text="Postnummer:" Grid.Row="2"/>
        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="150 0 0 15"/>

        <TextBlock Text="Postort:" Grid.Row="3"/>
        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="150 0 0 15"/>

        <TextBlock Text="Telefon:" Grid.Row="4"/>
        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Margin="150 0 0 15"/>

        <TextBlock Text="E-post:" Grid.Row="5"/>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="150 0 0 15"/>


    </Grid>

</UserControl>
